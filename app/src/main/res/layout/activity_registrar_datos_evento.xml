<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/naranja_light"
    tools:context=".Registrar_datos_evento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_button"/>

        <TextView
            android:id="@+id/titulo_evento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/option_cumple"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtDatosDelEvento"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/edit_nombreEvento"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="@string/txtNombreEvento"
        android:inputType="text"
        android:textColor="@color/naranja"
        android:textAlignment="center"
        android:background="@drawable/round_button"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edit_fechaEvento"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="@string/txtFechaEvento"
        android:inputType="date"
        android:textColor="@color/naranja"
        android:textAlignment="center"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/round_button"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtHorario"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_horaInicio"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="@string/txtHorarioInicio"
            android:inputType="time"
            android:textColor="@color/naranja"
            android:textAlignment="center"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/round_button"
            android:layout_marginStart="35dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="----"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/ed_horaFinal"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="@string/txtHorarioFinal"
            android:inputType="time"
            android:textColor="@color/naranja"
            android:clickable="false"
            android:focusable="false"
            android:textAlignment="center"
            android:background="@drawable/round_button"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnContinuar"
        android:layout_marginTop="100dp"
        android:layout_width="237dp"
        android:layout_height="59dp"
        android:text="@string/btnContinuar"
        android:textSize="25sp"
        android:textColor="@color/naranja"
        android:layout_gravity="center"
        android:background="@drawable/round_button2"/>

</LinearLayout>